@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Blog Engine</title>
    <meta name="viewport" content="width=device-width" />
    <!-- Meta -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Responsive HTML5 Website Landing Page for Developers">
    <link rel="shortcut icon" href="favicon.ico">
    <link href='http://fonts.googleapis.com/css?family=Lato:300,400,300italic,400italic' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    <!-- Global CSS -->
    <!--Bootstrap v3.3.7-->
    <link href="~/Scripts/Plugins/boostrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Plugins CSS -->
    <!--font-awesome 4.7.0 -->
    <link href="~/Scripts/Plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <!--github-activity-->
    <link href="~/Scripts/Plugins/github-activity/src/github-activity.css" rel="stylesheet" />
    <!--octicons.min.css-->
    <link href="~/Scripts/Plugins/octicons/dist/css/octicons.min.css" rel="stylesheet" />
    <!-- Theme CSS -->
    <link href="~/Assets/Clients/css/styles.css" rel="stylesheet" />
    <link href="~/Assets/Clients/css/custom.css" rel="stylesheet" />
</head>
<body>
    @{ Html.RenderPartial("Header"); }

    <div class="container sections-wrapper">
        <div class="row">
            @RenderBody()

            <div class="secondary col-md-4 col-sm-12 col-xs-12">
                @{ Html.RenderPartial("Category"); }
                @{ Html.RenderPartial("LastestComment"); }
            </div>
        </div>
    </div>

    @{ Html.RenderPartial("Footer"); }
    <!-- Javascript -->
    <!--jQuery v3.3.1-->
    <script src="~/Scripts/Plugins/jquery/dist/jquery.min.js"></script>
    <!--Bootstrap v3.3.7-->
    <script src="~/Scripts/Plugins/boostrap/dist/js/bootstrap.min.js"></script>
    <script src="~/Scripts/Plugins/bootstrap-treeview/dist/bootstrap-treeview.min.js"></script>
</body>
</html>
